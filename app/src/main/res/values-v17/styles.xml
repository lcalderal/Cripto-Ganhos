<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SpinnerItem">
        <item name="android:background">@drawable/coins_spinner</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cripto_blue_font">
        <item name="android:textColor">@color/text_cripto</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cripto_title">
        <item name="android:textColor">@color/text_cripto</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cripto_subtitle">
        <item name="android:textColor">@color/text_cripto</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cripto_white_font">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cripto_gray_font">
        <item name="android:textColor">@color/new_font_cripto</item>
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>